{
  "version": 2,
  "installCommand": "npm --prefix backend install --production && npm --prefix frontend install --include=dev",
  "buildCommand": "npm --prefix frontend run build",
  "outputDirectory": "frontend/dist",
  "framework": null,
  "functions": {
    "api/index.js": {
      "maxDuration": 30,
      "includeFiles": "backend/**"
    }
  },
  "rewrites": [
    { "source": "/api/health", "destination": "/api" },
    { "source": "/api/auth/(.*)", "destination": "/api" },
    { "source": "/api/interview/(.*)", "destination": "/api" },
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ]
}
